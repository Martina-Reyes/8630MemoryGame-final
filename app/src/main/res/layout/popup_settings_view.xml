<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/a_blue_setting_bg"

        android:paddingStart="15dp"

        >

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:gravity="left|top"
            android:orientation="vertical"
            android:padding="5dp"


            android:paddingStart="@dimen/popup_settings_padding_left"

            >

            <LinearLayout
                android:id="@+id/sound_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sound_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/popup_settings_sound_image_size"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/button_music_on" />

                <TextView
                    android:id="@+id/sound_off_text"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/popup_settings_sound_image_size"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/grobold"
                    android:gravity="left|center_vertical"
                    android:shadowColor="#2eaed9"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="4"
                    android:text="Sound ON"
                    android:textColor="#FFFFFF"

                    android:textSize="@dimen/popup_settings_sound_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/popup_settings_sound_image_size"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/button_rate" />

                <TextView
                    android:id="@+id/rate_text"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/popup_settings_sound_image_size"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/grobold"
                    android:gravity="left|center_vertical"
                    android:shadowColor="#2eaed9"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="4"
                    android:text="@string/rate"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/popup_settings_sound_text_size"

                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/topRv"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/a_red_top_setting_bg"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/grobold"
            android:gravity="center"
            android:shadowColor="#2eaed9"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="@string/settings"
            android:textColor="#FFFFFF"

            android:textSize="21sp" />
    </RelativeLayout>
</RelativeLayout>